
@{
    ViewBag.Title = "Create";
}

<h2>Create Book</h2>
<form action="/Book/Create" method="POST">
    <div>
        <label>Book Title: </label> <input type="text" name="Title"/>
    </div>
    <div>
        <label>Author Name: </label> <input type="text" name="Author" />
    </div>
    <div>
        <label>Genre: </label> <input type="text" name="Category" />
    </div>
    <div>
        <label>Available Copies: </label> <input type="number" name="AvailableCopy" />
    </div>
    <div>
        <input type="submit" value="Add Book" />
    </div>
</form>

